<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:ultimateRV="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="us.azhimkulov.cryptocurrency.view.viewmodel.CryptoCollectionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <us.azhimkulov.cryptocurrency.view.custom.UltimateRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ultimateRV:adapter="@{viewModel.ultimateAdapter}"/>

        <include
            layout="@layout/view_progress"
            app:isLoading="@{viewModel.isLoading()}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>